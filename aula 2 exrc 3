import java.util.Scanner;
import java.io.*;

class Main {
  public static void main(String[] args) {
     double altura,baseDoRetangulo,area,total;
		Scanner ler = new 
    Scanner(System.in);
    

		System.out.println("Digite a Base do Retangulo:");
		baseDoRetangulo = ler.nextDouble();
		
		System.out.println("Digite a Altura do Retangulo:");
		altura = ler.nextDouble();
		
		area = baseDoRetangulo * altura ;
		System.out.print("a area é: " + area);
    
		total =  baseDoRetangulo*2+altura*2;
		System.out.print("\no perimetro é: " + total);
  }
}
