import java.util.Scanner;
import java.io.*;

class Main {
  public static void main(String[] args) {
     double primeiraNota,segundaNota,terceiraNota,total,mediaAritmetica;
		Scanner ler = new 
    Scanner(System.in);
    
		System.out.println("Digite o primeiro Valor:");
		primeiraNota = ler.nextDouble();

		System.out.println("Digite o segundo valor:");
		segundaNota = ler.nextDouble();
		
		System.out.println("Digite o terceiro valor:");
		terceiraNota = ler.nextDouble();
		
		total = primeiraNota + segundaNota + terceiraNota;
		System.out.print("o total é: " + total);
		
		mediaAritmetica = total/3;
		System.out.print("\n a media aritimetica é: " + mediaAritmetica);
  }
}
