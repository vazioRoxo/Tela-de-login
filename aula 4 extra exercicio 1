import java.util.Scanner;
import java.io.*;

class Lista2 {
  public static void main(String[] args) {
     int horas,minutos,total;
		Scanner ler = new 
    Scanner(System.in);
    
		System.out.println("Digite as Hora em HH:");
		horas = ler.nextInt();

		System.out.println("Digite os Minutos em MM:");
		minutos = ler.nextInt();

		total = horas * 60 + minutos;
		System.out.println("\n Minutos desde o inicio do dia Ã©"+total);


		
  }
}
