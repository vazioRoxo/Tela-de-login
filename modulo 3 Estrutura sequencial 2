import java.util.Scanner;
import java.io.*;

class ListaAtividade {
  public static void main(String[] args) {
     double idadeAtual,anoNascimento,anoAtual,idadeFutura;
		Scanner ler = new 
    Scanner(System.in);
    

		System.out.println("Digite o seu ano de nascimento:");
		anoNascimento = ler.nextDouble();
		
		System.out.println("Digite o ano atual:");
		anoAtual = ler.nextDouble();

		idadeAtual = anoAtual - anoNascimento;
		System.out.println("Sua idade atual é"+idadeAtual);

		idadeFutura = 2050 -  anoNascimento;
		System.out.print("Sua idade em 2050 será: " + idadeFutura);
    	
  }
}
