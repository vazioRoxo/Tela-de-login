import java.util.Scanner;
import java.io.*;

class ListaAtividade {
  public static void main(String[] args) {
     double num1,num2,num3,total,mediaAritmetica;
		Scanner ler = new 
    Scanner(System.in);
    

		System.out.println("Digite o primeiro numero:");
		num1 = ler.nextDouble();
		
		System.out.println("Digite o segundo numero:");
		num2 = ler.nextDouble();

		System.out.println("Digite o terceiro numero:");
		num3 = ler.nextDouble();
		
		total = num1 + num2 + num3;
		System.out.print("a soma dos numeros são: " + total);
    
		mediaAritmetica =  total / 3;
		System.out.print("\na media aritmetica é: " + mediaAritmetica);
  }
}
